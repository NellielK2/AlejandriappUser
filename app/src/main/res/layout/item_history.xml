<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <me.unmsm.alejandriapp.presentacion.widget.MediumText
                android:id="@+id/history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo del libro"
                android:textSize="18sp" />
            <me.unmsm.alejandriapp.presentacion.widget.LigthText
                android:id="@+id/history_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <me.unmsm.alejandriapp.presentacion.widget.LigthText
                    android:id="@+id/history_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado"
                    android:textSize="16sp" />
                <me.unmsm.alejandriapp.presentacion.widget.LigthText
                    android:id="@+id/history_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha entrega"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>